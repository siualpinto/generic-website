{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "outDir": "dist",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "types": ["node", "express"],
    "baseUrl": ".",
    "strict": true,
    "allowJs": false,
    "sourceMap": true,
    "useDefineForClassFields": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "rootDirs": ["src"],
  },
  "ts-node": {
    "esm": true
  },
  "include": ["src/**/*.ts", "tests/**/*.ts", "src/index.ts"],
  "exclude": ["node_modules", ".vscode"],
}
